<div>

    <h1>{{foundUser.username}}</h1>
    <h3></h3>

    {{#unless isUserOrganiser}}
    <p>Attended events:
    <ul>
        {{#each attendedEvents.attendedEvents}}
        <li><a href="/events/{{this._id}}/details">{{this.name}}</a></li>
        {{/each}}
    </ul>
    </p>
    <p>Favourite events:
    <ul>
        {{#each favEvents.favouriteEvents}}
        <li><a href="/events/{{this._id}}/details">{{this.name}}</a></li>
        {{/each}}
    </ul>
    </p>
    {{/unless}}

    {{#if isUserOrganiser}}
    <p>Organised events:
    <ul>
        {{#each createdEvents}}
        <li><a href="/events/{{this._id}}/details">{{this.name}}</a></li>
        <br>
        {{#if isMyEvent}}
        {{!-- EDIT EVENT --}}
        <form action="/events/{{this._id}}/edit">
            <button>Edit</button>
        </form>
        {{!-- DELETE EVENT --}}
        <form action="/events/{{this._id}}/delete" method="post">
            <button>Delete</button>
        </form>
        {{/if}}
        {{/each}}
    </ul>
    </p>
    {{/if}}

    <h3>What do others think about this user?</h3>
    <form action="/profile/user/{{foundUser._id}}/comment" method="post">
    <input type="text" name="comment">
    <button>Comment</button>
    </form>

    <ul>
        {{#each foundUser.comment}}
        {{this.poster.username}} || {{this.date}}
        <li>{{comment}}</li>
        {{/each}}
    </ul>

</div>