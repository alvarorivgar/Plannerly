<div>
  <img src="{{singleEvent.image}}" alt="event image" height="250px">
  <h1>{{singleEvent.name}}</h1>
  <p><span>Price: {{singleEvent.price}}â‚¬</span> <span>Location: {{singleEvent.location}}</span> <span>Date:
      {{singleEvent.date}}</span> <span>Available slots: <span>{{usersGoing}}</span>/{{singleEvent.slots}}</span></p>
  <p>{{singleEvent.description}}</p>
  <p>Organiser: <a href="/profile/user/{{singleEvent.creator._id}}/details">{{singleEvent.creator.username}}</a></p>

  {{!-- USER --}}
  {{#unless isUserOrganiser}}
  <form action="/events/{{singleEvent._id}}/fav" method="post">
    <button>Fav</button>
  </form>
  {{/unless}}

  {{#unless isUserOrganiser}}
  {{#unless singleEvent.isFull}}
  <form action="/events/{{singleEvent._id}}/attend" method="post">
    <button>Attend</button>
  </form>
  {{/unless}}
  {{#if singleEvent.isFull}}
  <p>Event full</p>
  {{/if}}
  {{/unless}}

  {{!-- ORGANISER --}}
  {{#if isUserOrganiser}}
    {{#if singleEvent.isMyEvent}}
  <p>Attendants:</p>
  <ul>
    {{#each attendingUsers}}
    <form action="/events/{{../singleEvent._id}}/kick-user/{{this._id}}" method="post">
      <li><a href="/profile/user/{{this._id}}/details">{{this.username}}</a></li>
      <button>Delete user</button>
    </form>
    {{/each}}
  </ul>
  {{/if}}
  {{/if}}

</div>